---
export interface Props {
  slug?: string;
  title?: string;
  author?: string;
  date?: Date;
}

const {
  slug = undefined,
  title = undefined,
  author = undefined,
  date = undefined,
} = Astro.props;
---

<style>
  .blog-card {
    display: block;
    border-radius: 10px; /* カードの角丸 */
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1); /* 影の設定 */
    border: rgba(144, 144, 144, 0.479) solid 0.01rem;
    transition: box-shadow 0.5s ease-in-out;
    height: 100%;
    padding: 0 1rem;
    color: black;
    text-decoration: none;
  }

  .blog-card:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* 影の設定 */
  }

  h3 {
    text-decoration: underline;
  }
</style>

<a href={"/blog/" + slug} class="blog-card">
  <h3>{title}</h3>
  <div>
    <span>
      🗓<i>{date?.toLocaleDateString()}</i>
    </span>
    <span>|</span>
    <span>
      ✒️<i>{author}</i>
    </span>
  </div>
</a>
